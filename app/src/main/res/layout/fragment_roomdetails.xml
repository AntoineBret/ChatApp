<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.chatapp.ipme.chatapp.HomeActivity">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/roomdetails_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:divider="#fff" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <EditText
            android:id="@+id/edittext_messageInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ems="10"
            android:hint="Ecrivez votre message"
            android:inputType="text"
            android:paddingHorizontal="10dp"
            android:text="" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/button_MessageSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:padding="15dp"
            android:src="@drawable/ic_action_send_message"
            android:background="@drawable/circle_imageview_shape"
            android:layout_marginHorizontal="10dp"
            android:text="Envoyez"
            />

    </LinearLayout>
</LinearLayout>
